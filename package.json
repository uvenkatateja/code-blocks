{
  "name": "@pheralb/cb-workspace",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "website:lint": "pnpm --filter @pheralb/cb-website run check:lint",
    "website:build": "pnpm --filter @pheralb/cb-website run build",
    "website:build-cc": "pnpm --filter @pheralb/cb-website run build:cc",
    "website:registry": "pnpm --filter @pheralb/cb-website run check:registry",
    "typecheck": "turbo run typecheck",
    "check:format": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "fix:format": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache"
  },
  "devDependencies": {
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "turbo": "2.7.2",
    "typescript": "5.9.3"
  }
}
